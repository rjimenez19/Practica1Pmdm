<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreAn"
        android:layout_below="@+id/anNombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/anNombre"
        android:layout_alignStart="@+id/anNombre"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@android:drawable/ic_menu_report_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/anNombre"
        android:layout_alignBottom="@+id/telefono2An"
        android:layout_toLeftOf="@+id/nombreAn"
        android:layout_toStartOf="@+id/nombreAn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/anNombre"
        android:text="@string/nombre"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/anTelefono"
        android:layout_alignStart="@+id/anTelefono"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/telefono"
        android:id="@+id/anTelefono"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="91dp"
        android:layout_below="@+id/nombreAn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefonoAn"
        android:layout_below="@+id/anTelefono"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_alignRight="@+id/nombreAn"
        android:layout_alignEnd="@+id/nombreAn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/telefono2"
        android:id="@+id/anTelefono2"
        android:layout_below="@+id/telefonoAn"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefono2An"
        android:layout_below="@+id/anTelefono2"
        android:layout_alignLeft="@+id/anTelefono2"
        android:layout_alignStart="@+id/anTelefono2"
        android:layout_alignRight="@+id/telefonoAn"
        android:layout_alignEnd="@+id/telefonoAn" />

</RelativeLayout>